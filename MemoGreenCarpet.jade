head
  title Memory game on a green carpet
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, maximum-scale=1, user-scalable=no')
  meta(name='mobile-web-app-capable', content='yes')
  meta(name='apple-mobile-web-app-capable', content='yes')
  meta(name='apple-mobile-web-app-status-bar-style', content='black')
body

template(name='layout')
  +HeaderFooterLayout headerSize='50' footerSize='0'
    +navbar
    +cntCtrl

template(name='navbar')
  +SequentialLayout id='menuItems' target='header' direction='X'
    each routes
      +Surface id=name size='[150, undefined]' class='unselected'
        #header.items= options.menuName

template(name='cntCtrl')
  +RenderController target='content'
    +yield

template(name='home')
  +View size='[undefined, undefined]'
    +Surface size='[undefined, 30]' align='[.5, .15]' origin='[.5, .5]'
      h1 Memory
      p on a green carpet
    +Flipper size='[153, 230]' align='[.5, .6]'  origin='[.5, .5]' translate='[0,0,100]'
      +Surface id='card_1c' class='card' target='front' size='[153, 230]' align='[.5, .5]'  origin='[.5, .5]'
        img.card(src='joker_black.svg')
      +Surface id='card_back' class='card' target='back' size='[153, 230]' align='[.5, .5]' origin='[.5, .5]'
        img.card(src='card_back.svg')

template(name='link2')
  +Surface
    p Some content must be set here.
